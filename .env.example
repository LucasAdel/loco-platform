# ==================================================
# Loco Platform - Development Environment Variables
# ==================================================
# Copy this file to .env and fill in your actual values

# ==================================================
# SUPABASE CONFIGURATION (Required)
# ==================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==================================================
# MAPBOX CONFIGURATION
# ==================================================
VITE_MAPBOX_TOKEN=your_mapbox_token_here
MAPBOX_TOKEN=your_mapbox_token_here

# ==================================================
# SUPERADMIN CREDENTIALS
# ==================================================
SUPERADMIN_EMAIL=your_admin_email@example.com
SUPERADMIN_PASSWORD=your_secure_password

# ==================================================
# APPLICATION CONFIGURATION
# ==================================================
APP_ENV=development
LOG_LEVEL=debug
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080
APP_VERSION=0.1.0
DATABASE_URL=postgresql://postgres:password@localhost:5432/loco_platform

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=1
DB_CONNECT_TIMEOUT=30
DB_IDLE_TIMEOUT=600
DB_ACQUIRE_TIMEOUT=30

# ==================================================
# AUTHENTICATION CONFIGURATION
# ==================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_DURATION_DAYS=30

# ==================================================
# EMAIL CONFIGURATION
# ==================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@locoplatform.com.au

# ==================================================
# AUSTRALIAN SPECIFIC SETTINGS
# ==================================================
DEFAULT_TIMEZONE=Australia/Sydney
DEFAULT_CURRENCY=AUD
AHPRA_VALIDATION_ENABLED=true

# ==================================================
# RUST SPECIFIC
# ==================================================
RUST_LOG=debug
RUST_BACKTRACE=1