#!/bin/bash

# Simple run script for Loco Platform without cargo-leptos
# This script uses standard cargo commands

set -e

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${BLUE}ðŸš€ Starting Loco Platform (Simple Mode)${NC}"

# Function to cleanup on exit
cleanup() {
    echo -e "\n${YELLOW}Shutting down...${NC}"
    # Kill backend
    if [ ! -z "$BACKEND_PID" ]; then
        kill $BACKEND_PID 2>/dev/null || true
    fi
    # Kill frontend
    if [ ! -z "$FRONTEND_PID" ]; then
        kill $FRONTEND_PID 2>/dev/null || true
    fi
    exit 0
}

trap cleanup INT TERM

# Start backend
echo -e "${BLUE}Starting backend server...${NC}"
cd backend
RUST_LOG=debug cargo run &
BACKEND_PID=$!
cd ..

# Wait a bit for backend to start
sleep 5

# Start frontend development server
echo -e "${BLUE}Starting frontend development server...${NC}"
cd app

# Build WASM target
echo -e "${YELLOW}Building WASM target...${NC}"
rustup target add wasm32-unknown-unknown 2>/dev/null || true
cargo build --target wasm32-unknown-unknown

# Create a simple index.html if it doesn't exist
if [ ! -f "index.html" ]; then
    cat > index.html << 'EOF'
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Loco Platform</title>
    <style>
        body { margin: 0; padding: 0; font-family: sans-serif; }
        #app { min-height: 100vh; }
    </style>
</head>
<body>
    <div id="app"></div>
    <script type="module">
        import init from './pkg/loco_app.js';
        init();
    </script>
</body>
</html>
EOF
fi

# Use wasm-bindgen to generate JS bindings
if ! command -v wasm-bindgen &> /dev/null; then
    echo -e "${YELLOW}Installing wasm-bindgen-cli...${NC}"
    cargo install wasm-bindgen-cli
fi

echo -e "${YELLOW}Generating WASM bindings...${NC}"
wasm-bindgen --target web --out-dir pkg ../target/wasm32-unknown-unknown/debug/loco_app.wasm

# Serve with Python
echo -e "${BLUE}Starting web server on http://localhost:3080${NC}"
python3 -m http.server 3080 &
FRONTEND_PID=$!

cd ..

echo -e "${GREEN}âœ… Servers are running!${NC}"
echo -e "  Backend:  ${BLUE}http://localhost:3070${NC}"
echo -e "  Frontend: ${BLUE}http://localhost:3080${NC}"
echo -e "${YELLOW}Press Ctrl+C to stop${NC}"

# Keep script running
wait